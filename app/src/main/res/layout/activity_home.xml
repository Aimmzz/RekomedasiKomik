<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/black"
    tools:context=".HomeActivity">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/mm"
            android:textColor="@color/white"
            android:textSize="70sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="@string/judul"
            android:textColor="@color/white"
            android:fontFamily="@font/novaroundregular"
            android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="14dp"
        android:background="@drawable/bg2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:text="Pilih tipe komik :"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:textSize="18sp"/>
            <Button
                android:id="@+id/back_to_main2"
                android:layout_width="100dp"
                android:layout_height="41dp"
                android:layout_marginStart="12dp"
                android:textColor="@color/white"
                android:background="@drawable/btnback"
                android:textAllCaps="false"
                android:text="Back"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70dp"
                android:padding="22dp"
                android:background="@drawable/bg3"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/rekomendasi_manga"
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:src="@drawable/manga"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Manga"
                    android:textSize="16sp"
                    android:fontFamily="@font/novaroundregular"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/black"/>
                <ImageButton
                    android:id="@+id/rekomendasi_manhwa"
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/manhwa"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Manhwa / Webtoon"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</LinearLayout>